#! /usr/bin/env python

import os
import numpy as np
import pandas as pd

file_path = "../data"
files = [file for file in os.listdir(file_path)]

dataframes = []

for file in files:
    season, league = file.strip(".csv").split("_")
    print(file)
    data = pd.read_csv(os.path.join(file_path, file), sep=",", index_col=False)
    data["season"] = season[0:2]
    data["league"] = league
    dataframes.append(data)

output = pd.concat(dataframes)

print(output.head())


